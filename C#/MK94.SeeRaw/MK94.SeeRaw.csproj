<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>8</LangVersion>
    <PackageProjectUrl>https://github.com/mukut1994/SeeRaw</PackageProjectUrl>
    <PackageLicense>https://github.com/mukut1994/SeeRaw/blob/master/LICENSE</PackageLicense>    
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Client\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Content Include="Client/**">
      <Pack>true</Pack>
    </Content>
  </ItemGroup>
  
  <ItemGroup>
    <ClientFiles Include="$(ProjectDir)/../../Client/dist/**" />
    <ClientSrcFiles Include="$(ProjectDir)/../../Client/src/**" />
  </ItemGroup>
  
  <Target Inputs="@(ClientSrcFiles)" Outputs="$(ProjectDir)Client\index.html" Name="PrecompileScript" BeforeTargets="BeforeBuild">
    <Exec WorkingDirectory="$(ProjectDir)/../../Client" Command="yarn build --prod" />
    <Copy SourceFiles="@(ClientFiles)" DestinationFolder="$(ProjectDir)/Client" />
  </Target>

</Project>
